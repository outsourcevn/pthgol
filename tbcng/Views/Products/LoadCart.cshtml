@model List<tbcng.Models.product_order>
@if (Model != null)
{
    int count = 0;
        <ul>
            <li class="cp-cart-holder">
                <a href="/Products/Cart"><span class="icon-shopping-cart icomoon"></span></a>
                <span class="cart-item" id="totalcartitems" style="background-color:red;">@ViewBag.count</span>
                @if (Model.Count > 0)
                {
                    <div class="cp-cart-inner">
                            <ul class="cart-listed" id="cart-listed">
                                @foreach (var item in Model) { 
                                    <li id="cartitem_@item.id">
                                        <img src="@item.product_photos" alt="">
                                        <div class="cart-text">
                                            <strong>@item.product_name</strong>
                                            <span>@item.quantity x @item.product_price</span>
                                            <div class="cart-icons">
                                                <a href="#"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
                                                <a href="#" onclick="removeCartItem(@item.id);"><i class="fa fa-times" aria-hidden="true"></i></a>
                                            </div>
                                        </div>
                                    </li>                            
                                }
                            </ul>
                    </div>
                }
            </li>
            <li class="cp-search-holder">
                <button id="trigger-overlay" type="button"><i class="fa fa-search" aria-hidden="true"></i></button>
            </li>
        </ul>
    
}
