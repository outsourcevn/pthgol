@using tbcng.Models
@model product
@{
    ViewBag.Title = "Xóa sản phẩm";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

@section PageTitleHeader {
    <div class="page-header">
        <h3><i class="fa fa-list fa-2x fa-color-red"></i> @ViewBag.Title</h3>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            @Html.Raw(TempData["Error"])
        </div>

    }

    @if (TempData["Deleted"] != null)
    {
        <div class="alert alert-success alert-dismissible fade in" role="alert">
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">×</span>
            </button>
            @Html.Raw(TempData["Deleted"])
        </div>
    }
}


@if (Model != null)
{

    <div class="row">
        <div class="col-lg-6">
            <div class="panel panel-default box box-primary">
                <div class="panel-heading">
                    <h3 class="panel-title">Bạn chắc chắn muốn xóa sản phẩm <b>@Html.DisplayFor(m => m.product_name)?</b></h3>
                </div>
                <div class="panel-body">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @*<input type="submit" class="btn btn-primary" value="Xóa menu" />*@
                        <button class="btn btn-danger" id="confirmdelete"><i class="fa fa-trash"></i> Xóa</button>
                        <span class="btn btn-default" onclick="gotoUrl('@Url.RouteUrl("AdminListProduct")')"><i class="fa fa-close"></i> Hủy xóa</span>
                    }
                </div>
            </div>
        </div>
    </div>

}
else
{
    <span>Không tìm thấy sản phẩm.</span>
}

@section Scripts {

    <script>
        $(document).ready(function () {
            $('#confirmdelete').on('click', function (e) {
                confirmDelete(e);
            })
        })
    </script>
}