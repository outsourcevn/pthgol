@model List<tbcng.Models.product>
@if (Model != null)
{
    int count = 0;
    if (Model.Count > 0)
    {
        <div id="cp-product-slider1" class="owl-carousel">
            @foreach(var item in Model){
                var link = "/san-pham/" + tbcng.Helpers.configs.getcatname(item.cat_id) + "/" + tbcng.Helpers.configs.unicodeToNoMark(item.product_name) + "-" + item.product_id;
            <!--Owl Item Start-->
            <div class="cp-pro-item">
       
                <div class="cp-pro-img">
                    <img src="@item.product_photo" alt="">
                </div>
                <div class="cp-text">
                    <h3><a href="@link">@item.product_name</a></h3>
                    <span class="pro-price">@String.Format("{0:n0}", @item.product_price_public) đồng</span>
                    <ul class="cp-pro-meta">
                        <li class="pro-cart"><a href="#"><span class="icon-shopping-cart icomoon"></span></a></li>
                        <li><a href="#"><i class="fa fa-search" aria-hidden="true"></i></a></li>
                    </ul>
                </div>
            </div><!--Owl Item End-->
            }
        </div>
    }
}
