@{
    ViewBag.Title = "Thiết bị công nghiệp";
}

@{
    string url = Request.Url.Authority;
    if (Request.ServerVariables["HTTPS"] == "on")
    {
        url = "https://" + url;
    }
    else
    {
        url = "http://" + url;
    }
}

