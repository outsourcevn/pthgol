@model List<tbcng.Models.product>
@using tbcng.Helpers;

<div class="kf_agent_slider owl-carousel owl-theme">
    @if (Model != null)
    {
        foreach (var product in Model)
        {
            <div class="item">
                <div class="kf_agent_wrap">
                    <figure>
                        <img src="@product.product_photo" alt="@product.product_name">
                        <figcaption>
                            <span class="kf_listing_overlay"></span>
                        </figcaption>
                    </figure>
                    <div class="kf_agent_des">
                        <h6><a href="@string.Format("/san-pham/{0}/{1}-{2}", product.cat.cat_url, configs.unicodeToNoMark(@product.product_name), @product.product_id)">@product.product_name</a></h6>
                        <span class="kf_property_line"></span>
                        <span style="display: block;">
                            Giá: @*@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:#,###}", product.product_price_public) <b>đồng.</b>*@
                            @if (product.product_price_public != null && product.product_price_public > 0)
                            {
                                <text>@string.Format(System.Globalization.CultureInfo.GetCultureInfo("vi-VN"), "{0:#,###}", product.product_price_public)</text> <b>đồng.</b>

                            }
                            else
                            {
                                <text>Thỏa thuận</text>
                            }
                        </span>
                    </div>
                </div>
            </div>
        }
    }

</div>